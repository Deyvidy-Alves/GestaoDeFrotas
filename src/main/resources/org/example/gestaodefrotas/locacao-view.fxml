<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestaodefrotas.controller.LocacaoController">
    <padding>
        <Insets bottom="30.0" left="40.0" right="40.0" top="30.0" />
    </padding>

    <Label text="Abertura de Contrato de Locação" textFill="#28a745">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <Label text="Selecione o Cliente:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    <ComboBox fx:id="cbClientes" prefWidth="400.0" style="-fx-font-size: 14px;" />

    <HBox alignment="CENTER" spacing="15.0">
        <Label text="Filtrar Frota:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <ComboBox fx:id="cbFiltroVeiculo" prefWidth="150.0" style="-fx-font-size: 14px;" />
    </HBox>

    <Label text="Selecione o Veículo Disponível:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    <ComboBox fx:id="cbVeiculos" prefWidth="400.0" style="-fx-font-size: 14px;" />

    <Label text="Data de Retirada:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    <DatePicker fx:id="dtRetirada" prefWidth="400.0" style="-fx-font-size: 14px;" />

    <Label text="Data Prevista de Devolução:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    <DatePicker fx:id="dtPrevista" prefWidth="400.0" style="-fx-font-size: 14px;" />

    <Label text="Nível do Tanque (Saída):" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
    <ComboBox fx:id="cbCombustivel" prefWidth="400.0" style="-fx-font-size: 14px;" />

    <Button onAction="#onSalvarLocacao" text="Confirmar e Abrir Contrato" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 6; -fx-cursor: hand; -fx-padding: 12 30 12 30;">
        <VBox.margin>
            <Insets top="15.0" />
        </VBox.margin>
    </Button>

    <Button onAction="#onVoltar" text="Cancelar e Voltar" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 6; -fx-cursor: hand; -fx-padding: 10 30 10 30;" />
</VBox>