<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.gestaodefrotas.controller.CadastroVeiculoController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Novo Veículo">
        <font>
            <Font name="System Bold" size="18.0" />
        </font>
    </Label>

    <TextField fx:id="txtModelo" promptText="Modelo (Ex: Fiat Uno)" />
    <TextField fx:id="txtPlaca" promptText="Placa (Ex: ABC-1234)" />
    <TextField fx:id="txtKm" promptText="KM Atual (Apenas números)" />
    <TextField fx:id="txtValor" promptText="Valor Diária (Ex: 100.00)" />

    <Button onAction="#onSalvar" text="Salvar no Banco" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold;" />
    <Button onAction="#onVoltar" text="⬅ Voltar ao Menu" style="-fx-background-color: #6c757d; -fx-text-fill: white;" />
</VBox>